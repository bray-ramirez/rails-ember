  {{#each sortedRecord as |post|}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>{{post.title}}</h4>
      </div>
      <div class="panel-body">
        {{post.content}}
      </div>
      <div class="panel-footer">
        {{#link-to post.type post.id}}View{{/link-to}}
      </div>
    </div>
  {{/each}}
