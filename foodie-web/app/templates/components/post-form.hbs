<form {{action "save" on="submit"}} class="form-horizontal">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input id="title" class="form-control" placeholder="Title" value=bufferedAttributes.title}}
    </div>
  </div>

  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">Content</label>
    <div class="col-sm-10">
      {{textarea id="content" class="form-control" placeholder="Content" rows=5 value=bufferedAttributes.content}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <label>
        {{input type="checkbox" checked=bufferedAttributes.visible}} Published?
      </label>
    </div>
  </div>

  <hr />

  <div class="from-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Save</button>
      <button {{action "postViewable"}} class="btn btn-default">Cancel</button>
    </div>
  </div>
</form>
