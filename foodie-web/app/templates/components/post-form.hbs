<form {{action "save" on="submit"}} class="form-horizontal">
  {{
    input-form
      type="text"
      field="title"
      label="Title"
      value=bufferedAttributes.title
      errors=errors.title
      showErrors=showErrors
  }}

  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">Content</label>
    <div class="col-sm-10">
      {{textarea id="content" class="form-control" placeholder="Content" rows=5 value=bufferedAttributes.content}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <label>
        {{input type="checkbox" checked=bufferedAttributes.visible}} Publish?
      </label>
    </div>
  </div>

  <hr />

  <div class="from-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Save</button>
      <button {{action "postViewable"}} class="btn btn-default">Cancel</button>
    </div>
  </div>
</form>
