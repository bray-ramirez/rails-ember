<form {{action "save" on="submit"}} class="form-horizontal">
  {{
    input-form
      type="text"
      field="name"
      label="Name"
      value=userAttributes.name
      errors=errors.name
      showErrors=showErrors
  }}

  {{
    input-form
      type="email"
      field="email"
      label="Email"
      value=userAttributes.email
      errors=errors.email
      showErrors=showErrors
  }}

  {{
    input-form
      type="password"
      field="password"
      label="Password"
      value=userAttributes.password
      errors=errors.password
      showErrors=showErrors
  }}

  {{
    input-form
      type="password"
      field="password-confirmation"
      label="Confirm Password"
      value=userAttributes.password_confirmation
      errors=errors.password_confirmation
      showErrors=showErrors
  }}

  <hr />

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Save</button>
      <button {{action "hideForm"}} class="btn btn-default">Cancel</button>
    </div>
  </div>
</form>
