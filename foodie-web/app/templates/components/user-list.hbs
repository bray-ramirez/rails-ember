<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each users as |user|}}
      <tr>
        <td>{{user.name}}</td>
        <td>{{user.email}}</td>
        <td>
          <button {{action "delete" user}} class="btn btn-danger btn-xs">
            <span class="glyphicon glyphicon-trash"></span>
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
